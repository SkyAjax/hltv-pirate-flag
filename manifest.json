{
  "manifest_version": 5,
  "name": "HLTV No Ru Flag",
  "version": "1.5.0",
  "description": "Replaces Russian flag on hltv.org with your choice of alternative flags",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Choose Flag Style"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.hltv.org/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    { "resources": ["flags/*.png"], "matches": ["*://*.hltv.org/*"] }
  ]
}

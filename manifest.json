{
  "manifest_version": 3,
  "name": "HLTV No Ru Flag",
  "version": "1.3.0",
  "description": "Replaces Russian flag on hltv.org with a pirate flag",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.hltv.org/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pirate.png"],
      "matches": ["*://*.hltv.org/*"]
    }
  ]
}
